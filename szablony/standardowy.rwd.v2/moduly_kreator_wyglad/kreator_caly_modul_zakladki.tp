<script>
    $(document).ready(function() {

        var slider, btn, tabC, prevIndex, objTab = {};
  
        btn = $(".ZakladkaNaglowekModul");
  tabC = $(".ZakladkaTrescModul");
  
  prevIndex = 0;
  
  btn.on("click", function() {
    
    var th, thIndex;
    
    th = $(this);
    thIndex = th.index();
       
    if(!th.hasClass("ZakladkaTrescModulAktywna")) {
      if(prevIndex != thIndex && prevIndex !== 'undefined') {
        btn.eq(prevIndex).removeClass("ZakladkaNaglowekModulAktywna");
        tabC.eq(prevIndex).removeClass("ZakladkaTrescModulAktywna ZakladkaWidoczna");
      }
      btn.eq(thIndex).addClass("ZakladkaNaglowekModulAktywna");
      tabC.eq(thIndex).addClass("ZakladkaTrescModulAktywna ZakladkaWidoczna");
      prevIndex = thIndex;
      
      tabC.eq(thIndex).find(".AnimacjaKreator").slick('setPosition');

    }
  });
});


</script>